# ============================================================================
# ENTERPRISE RISK ASSESSMENT PLATFORM - ENVIRONMENT CONFIGURATION
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
APP_NAME="Enterprise Risk Assessment Platform"
APP_VERSION="3.0.0"
DEBUG=false
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# LLM CONFIGURATION (CRITICAL - REQUIRED)
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=8192

# ----------------------------------------------------------------------------
# DATABASE CONNECTIONS
# ----------------------------------------------------------------------------
# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis Cache
REDIS_URL=redis://localhost:6379

# PostgreSQL (optional)
POSTGRES_URL=postgresql://user:password@localhost:5432/erp

# ----------------------------------------------------------------------------
# AGENT CONFIGURATION
# ----------------------------------------------------------------------------
AGENT_TIMEOUT=600
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY=5

# ----------------------------------------------------------------------------
# API CONFIGURATION
# ----------------------------------------------------------------------------
API_RATE_LIMIT=100
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# ----------------------------------------------------------------------------
# DATA RETENTION
# ----------------------------------------------------------------------------
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# SERVER SETTINGS
# ----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# ----------------------------------------------------------------------------
# EXTERNAL API KEYS (Optional - for enhanced data sources)
# ----------------------------------------------------------------------------
# Economic Data
FRED_KEY=

# Financial Data
ALPHA_VANTAGE_KEY=
FINNHUB_KEY=

# Security Data
HIBP_KEY=

# News & Sentiment
# NEWSAPI_KEY=
# GDELT is free, no key needed

# ----------------------------------------------------------------------------
# NOTES
# ----------------------------------------------------------------------------
# 1. OPENAI_API_KEY is REQUIRED - get from https://platform.openai.com
# 2. Most tools use FREE APIs that don't require keys
# 3. Optional API keys enhance data quality but aren't required
# 4. Never commit this file with real keys - use .env (git ignored)
